    static void Main()
    {
        
        Console.Write("Digite um número: ");
        int numero = Convert.ToInt32(Console.ReadLine());

        int resultado;

        if (numero > 0)
        {
            
            resultado = numero * 2;
        }
        else
        {
        
            resultado = numero * 3;
        }

        
        Console.WriteLine("O resultado é: {resultado}");
    }
}
